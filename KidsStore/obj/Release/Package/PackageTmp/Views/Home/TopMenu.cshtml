@{
        var session =(KidsStore.Common.UserLogin)Session[KidsStore.Common.CommonConstanst.USER_SESSION];
}
 @if (session == null)
 {
    <ul>
        @foreach (var item in Model)
        {
        <li><a  href="@item.Link" target="@item.Target"><font color="FF4500">@item.Text </font></a></li>

        }
    </ul>
 }
 else
 {
        <ul>
            <li>Xin chào:<font color="FF4500"> @session.UserName </font></li>
            <li> @Html.ActionLink("Thoát", "Logout", "User")</li>
        </ul>
    }
</div>
